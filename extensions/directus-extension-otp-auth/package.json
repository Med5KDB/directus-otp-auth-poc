{
  "name": "directus-extension-otp-auth",
  "version": "1.0.0",
  "description": "OTP Authentication extension for Directus via SMS",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-custom-endpoint",
    "otp",
    "sms",
    "authentication"
  ],
  "directus:extension": {
    "type": "endpoint",
    "path": "dist/index.js",
    "source": "src/index.ts",
    "host": "^11.0.0"
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "^11.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
